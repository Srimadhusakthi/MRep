<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.Light"
    tools:context="com.mrep.video.VideoCallActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_one_to_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_4dsp"
        android:text="One to One"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_12dsp"
        android:textStyle="bold"
        app:backgroundTint="@color/btn_bg" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_4dsp"
        android:text="Group"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_12dsp"
        android:textStyle="bold"
        app:backgroundTint="@color/btn_bg" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_4dsp"
        android:text="Screen Share"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_12dsp"
        android:textStyle="bold"
        app:backgroundTint="@color/btn_bg" />
</LinearLayout>